<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_gravity="center"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#9E74CD"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_dieases1"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:id="@+id/single_medicine1"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_dieases2"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_medicine2"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_dieases3"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_medicine3"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_dieases4"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:id="@+id/single_medicine4"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textAlignment="center"
                android:id="@+id/single_medicine_status"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:id="@+id/medicine_feedback_msg"
                android:textAlignment="center"/>



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change_medicine_status_checkbox"
                android:layout_gravity="center"
                android:textStyle="bold"

                android:textColor="#FAF4F4"
                android:text="    Change Medicine status"
                android:padding="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ok_btn"
                android:text="Ok"
                android:textStyle="bold"
                android:background="#253FEA"
                android:textColor="#FAF4F4"
                android:layout_gravity="center"/>



        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>