<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#19887F"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:id="@+id/single_accepted_doctor_image"/>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#F8F5F5"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:id="@+id/single_accepted_doctor_name"/>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#F8F5F5"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:id="@+id/single_accepted_doctor_profession"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#F8F5F5"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:id="@+id/single_accepted_doctor_speciality"/>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#0F89B8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#E41515"
                        android:textStyle="bold"
                        android:id="@+id/time_date_status_msg_for_patient"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#F8F3F3"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#6210D3"
                        android:text="View  Appoint Description"
                        android:id="@+id/view_appointment_desc_for_patient"/>





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#E41515"
                        android:textStyle="bold"
                        android:id="@+id/medicine_status_msg_for_patient"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#6210D3"
                        android:textColor="#F8F3F3"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="View Medicine Description"
                        android:id="@+id/view_medicine_desc_for_patient"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Give  feedback"
                        android:textColor="#F8F3F3"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="#6210D3"
                        android:id="@+id/give_feedback_patient_btn"
                        android:layout_gravity="center"/>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="view  feedback"
                        android:textColor="#F8F3F3"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/view_feedback_patient_btn"
                        android:background="#6210D3"
                        android:layout_gravity="center"/>



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Start meeting"
                        android:textColor="#F8F3F3"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#6210D3"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/start_meeting_btn_for_patient"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/patient_request_new_appointment_status_msg"/>




                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#6210D3"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:textColor="#F8F3F3"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:id="@+id/patient_request_new_appointment_custom_msg_btn"
                        android:padding="10dp"
                        android:text="Request New Appointment (Custom Message)"/>


                </LinearLayout>



            </androidx.cardview.widget.CardView>




        </LinearLayout>



    </ScrollView>



</LinearLayout>